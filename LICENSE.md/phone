<script>

function val(){

if(myForm.phone.value=="")
{
  alert("invalid");
  
  return false;
}

if(isNaN(myForm.phone.value))
{
  alert("invalid phone");
  
  return false;
}
if((myForm.phone.value).length<10)
{
   alert("invalid phone");
 
  return false;
}
return true;


}










